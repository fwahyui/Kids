<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids_learningback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
     <com.google.android.gms.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="@string/admob_id_banner"
                         ads:adSize="BANNER"/>

     <Button
         android:id="@+id/learningbtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/gamebtn"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="26dp"
         android:background="@drawable/learning_icon"
         android:onClick="gameClick"
         android:text="  " />

     <Button
         android:id="@+id/gamebtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/learningbtn"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="145dp"
         android:background="@drawable/game_icon"
         android:onClick="learningClick"
         android:text="  " />

</RelativeLayout>
